<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/maincolor</item>
        <item name="colorPrimaryDark">@color/maindarkcolor</item>
        <!-- tab line color-->
        <item name="colorAccent">@color/orange</item>
    </style>
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="MyDialogPop" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/MyDialogAnimationPop</item>
    </style>

    <style name="MyDialogAnimationPop">
        <item name="android:windowEnterAnimation">@anim/pop_show_overshoot</item>
        <item name="android:windowExitAnimation">@anim/pop_dismiss_interpolator</item>
    </style>

    <style name="Theme.AppCompat.Light.Dialog.NoActionBar"  parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="BottomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
    </style>

    <style name="MainTabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
